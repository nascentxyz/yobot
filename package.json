{
  "name": "yobot",
  "description": "A trustless broker to match off-chain bots with user contract call requests.",
  "version": "0.0.3",
  "private": true,
  "license": "AGPL-3.0-only",
  "authors": [
    "Andreas Bigger <andreas@nascent.xyz>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nascentxyz/yobot.git"
  },
  "files": [
    "*.sol"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "prepublishOnly": "copyfiles -u 1 \"./src/**/*.sol\" --exclude \"./src/test/**/*.sol\" ./",
    "postpublish": "rimraf ./*.sol",
    "prepack": "yarn prepublishOnly",
    "postpack": "yarn postpublish",
    "lint": "next lint && yarn prettier && yarn solhint",
    "lint:check": "yarn prettier:check && yarn solhint:check",
    "prettier": "yarn prettier:check --write",
    "prettier:check": "prettier --check \"src/**/*.sol\" && prettier --check \"src/*.sol\"",
    "prettier:write": "prettier -w .",
    "solhint": "yarn solhint:check --fix",
    "solhint:check": "solhint --config ./.solhint.json \"src/**/*.sol\"",
    "visualize": "surya graph -s src/**/*.sol | dot -Tpng > assets/contracts.png",
    "contracts-test": "dapp test",
    "contracts-lint": "prettier --write src/**/*.sol",
    "precommit-msg": "echo 'Running pre-commit checks...' && exit 0",
    "fix-oz": "ln -s contracts lib/zeppelin-solidity/src"
  },
  "pre-commit": [
    "precommit-msg",
    "prettier:write",
    "lint"
  ],
  "dependencies": {
    "@chakra-ui/icons": "^1.0.16",
    "@chakra-ui/react": "^1.4.2",
    "@chakra-ui/theme-tools": "1.1.2",
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "@ensdomains/react-ens-address": "^0.0.30",
    "@metamask/jazzicon": "^2.0.0",
    "@usedapp/core": "^0.5.4",
    "@walletconnect/web3-provider": "^1.6.5",
    "@web3-react/core": "^6.1.9",
    "@web3-react/injected-connector": "^6.0.7",
    "@web3-react/walletconnect-connector": "^6.2.4",
    "autoprefixer": "^10.3.4",
    "classnames": "^2.3.1",
    "debounce": "^1.2.1",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.7",
    "framer-motion": "^4.0.3",
    "logrocket": "^2.1.1",
    "material-react-toastify": "^1.0.1",
    "next": "^12.0.1",
    "react": "^17.0.2",
    "react-console-emulator": "^5.0.1",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.12.0",
    "react-toastify": "^8.0.3",
    "styled-components": "^5.3.1",
    "waitlistapi": "^0.6.2",
    "web3": "^1.5.3",
    "web3modal": "^1.9.4"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^11.1.2",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.1",
    "@types/node": "^14.6.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@zeplin/cli": "1.1.12",
    "@zeplin/cli-connect-react-plugin": "1.1.1",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.6.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "standardx": "^7.0.0",
    "surya": "^0.4.3",
    "typescript": "4.3.2"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 1000
        }
      }
    ]
  }
}
